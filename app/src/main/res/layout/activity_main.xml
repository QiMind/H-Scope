<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black">
    
    
    <ImageView
        android:layout_width="420dp"
        android:layout_height="440dp"
        android:id="@+id/mainImageView"
        android:src="@drawable/start_screen_pic"
        android:layout_gravity="center"
        android:padding="12dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"/>
    <Spinner
        android:id="@+id/zodiacSpinner"
        android:layout_width="194dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_margin="70dp"
        android:fontFamily="-monospace"
        android:gravity="center"
        android:outlineAmbientShadowColor="@color/white"
        android:padding="15dp"
        android:text="Please Select Your Sign"
        android:textColor="#e0e0e0"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="25dp">


        <com.google.android.material.button.MaterialButton
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:text="Horoscope"
            android:textColor="#DFC681"
            app:rippleColor="#aaaaaa"
            app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent"
            app:strokeColor="#DFC681"
            android:id="@+id/main_horoscope_button"
            app:backgroundTint="@color/black"
            app:strokeWidth="1dp"
            app:cornerRadius="24dp"
            style="?attr/materialButtonOutlinedStyle"
            android:padding="10dp"
            android:layout_marginLeft="15dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:text="Tarot Reading"
            android:textColor="#DFC681"
            app:rippleColor="#aaaaaa"
            app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent"
            app:strokeColor="#DFC681"
            android:id="@+id/main_tarot_button"
            app:backgroundTint="@color/black"
            app:strokeWidth="1dp"
            app:cornerRadius="24dp"
            style="?attr/materialButtonOutlinedStyle"
            android:padding="10dp"
            android:layout_marginLeft="15dp"/>



    </LinearLayout>



</LinearLayout>